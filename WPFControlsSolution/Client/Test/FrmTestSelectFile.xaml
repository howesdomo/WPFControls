<Window
    x:Class="Client.Test.FrmTestSelectFile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Test"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:Client.Components;assembly=WPFControls"
    Title="FrmTestSelectFile"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="gMain">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <uc:UcSelectFile
                Title="选择"
                Grid.Row="0"
                Filter="Excel (*.xls,*.xlsx)|*.xls;*.xlsx|Excel 97-03工作簿 (*.xls)|*.xls|Excel 工作簿(*.xlsx)|*.xlsx" />

            <uc:UcSelectFile
                Title="选择"
                Grid.Row="1"
                Filter="Excel (*.xls,*.xlsx)|*.xls;*.xlsx|Excel 97-03工作簿 (*.xls)|*.xls|Excel 工作簿(*.xlsx)|*.xlsx"
                Multiselect="True" />

            <uc:UcSelectFile
                Title="选择"
                Grid.Row="2" />

            <uc:UcSelectFile
                Title="选择"
                Grid.Row="3"
                Multiselect="True" />
        </Grid>
    </Grid>
</Window>
