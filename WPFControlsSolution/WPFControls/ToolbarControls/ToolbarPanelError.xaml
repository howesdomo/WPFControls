<StackPanel
    x:Class="Client.Components.ToolbarControls.ToolbarPanelError"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinHeight="35"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    Background="{DynamicResource ToolbarPannelBackgroundBrush}"
    Orientation="Horizontal">

    <StackPanel.Resources>
        <ResourceDictionary>
            <LinearGradientBrush x:Key="ToolbarPannelBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1.0">
                <GradientStop Offset="0" Color="#FFFFFFFF" />
                <GradientStop Offset="0.35" Color="#FFFFFFFF" />
                <GradientStop Offset="1" Color="#FFd4dbe5" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </StackPanel.Resources>
</StackPanel>
