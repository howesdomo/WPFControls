<local:SearchConditionBase
    x:Class="Client.Components.SearchPanelControls.SearchConditionTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Components.SearchPanelControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="this"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Content="{Binding ElementName=this, Path=Title}"
            Style="{DynamicResource sp_Label}" />
        <ContentPresenter
            Name="presenter"
            Grid.Row="1"
            Style="{DynamicResource sp_ContentPresenter}" />
    </Grid>
</local:SearchConditionBase>
