<UserControl
    x:Class="Client.Components.UcWait"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid
        x:Name="gWait"
        Visibility="Hidden">

        <Grid
            Background="Black"
            Opacity="0.4">
            <!--  此 Grid 用于整个版面半透明  -->
        </Grid>

        <Grid>
            <MediaElement
                x:Name="meWait"
                Width="80"
                Height="80"
                LoadedBehavior="Play"
                UnloadedBehavior="Manual" />

            <TextBlock
                x:Name="txtMsg"
                Margin="0,120,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="26"
                Foreground="Yellow"
                Opacity="1"
                Text="{Binding BusyContent, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </Grid>
</UserControl>
