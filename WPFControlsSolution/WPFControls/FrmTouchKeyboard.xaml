                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="E" />
            <Button
                Grid.Row="1"
                Grid.Column="3"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="R" />
            <Button
                Grid.Row="1"
                Grid.Column="4"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="T" />
            <Button
                Grid.Row="1"
                Grid.Column="5"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="Y" />
            <Button
                Grid.Row="1"
