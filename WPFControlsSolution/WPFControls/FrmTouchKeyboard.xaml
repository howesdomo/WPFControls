                Content="M" />

            <Button
                Grid.Row="3"
                Grid.Column="7"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="-" />

            <Button
                Grid.Row="3"
                Grid.Column="8"
                Width="50"
                Margin="3"
                Click="Input_Click"
                Content="_"
                FontSize="25" />

            <Button
                Grid.Row="3"
                Grid.Column="9"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="." />

        </Grid>
    </Border>
</Window>
