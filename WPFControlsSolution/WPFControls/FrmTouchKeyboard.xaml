                Content="O" />
            <Button
                Grid.Row="1"
                Grid.Column="9"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="P" />


            <!--  2  -->
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="A" />
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="S" />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="D" />
            <Button
                Grid.Row="2"
                Grid.Column="3"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="F" />
            <Button
                Grid.Row="2"
                Grid.Column="4"
