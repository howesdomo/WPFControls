                Content="L" />
            <Button
                x:Name="btnSpace"
                Grid.Row="2"
                Grid.Column="9"
                Width="50"
                Margin="3"
                Padding="3"
                Click="btnSpace_Click"
                Content="空格"
                FontSize="20" />

            <!--  3  -->
            <Button
                Grid.Row="3"
                Grid.Column="0"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="Z" />
            <Button
                Grid.Row="3"
                Grid.Column="1"
                Width="50"
                Margin="3"
                Padding="3"
                Click="Input_Click"
                Content="X" />
            <Button
                Grid.Row="3"
                Grid.Column="2"
                Width="50"
