<local:SearchCriteia
    x:Class="Client.Components.SearchBarControls.SearchTextCriteia"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Components.SearchBarControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:Client.Components"
    x:Name="SearchCriteia"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Content="{Binding ElementName=SearchCriteia, Path=Title}"
            Style="{DynamicResource sp_Label}" />

        <ui:TextBoxAdv
            Grid.Row="1"
            Background="{Binding ElementName=SearchCriteia, Path=TextBoxBackground}"
            IsReadOnly="{Binding ElementName=SearchCriteia, Path=IsReadOnly}"
            Placeholder="{Binding ElementName=SearchCriteia, Path=Placeholder}"
            PlaceholderColor="{Binding ElementName=SearchCriteia, Path=PlaceholderColor}"
            PlaceholderFontSize="{Binding ElementName=SearchCriteia, Path=PlaceholderFontSize}"
            Style="{DynamicResource sp_TextBoxAdv}"
            Text="{Binding ElementName=SearchCriteia, Path=Value}" />
    </Grid>
</local:SearchCriteia>
