<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Client.Components">
    <Style TargetType="{x:Type local:ColumnsGridSplitter}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ColumnsGridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <Ellipse
                                Width="2"
                                Height="2"
                                Margin="1"
                                Fill="Gray" />
                            <Ellipse
                                Width="2"
                                Height="2"
                                Margin="1"
                                Fill="Gray" />
                            <Ellipse
                                Width="2"
                                Height="2"
                                Margin="1"
                                Fill="Gray" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>