<UserControl
    x:Class="WPFControls.UcBusyIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="thisUserControl">
    <Grid
        x:Name="gWait"
        Visibility="Hidden">

        <Grid
            Background="Black"
            Opacity="0.4">
            <!--  此 Grid 用于整个版面半透明  -->
        </Grid>

        <Grid>
            <local:BusyIndicator
                x:Name="busyIndicator"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                PathData="{Binding ElementName=thisUserControl, Path=BusyIndicatorPathData}"
                PathFill="{Binding ElementName=thisUserControl, Path=BusyIndicatorFill}"
                PathStroke="{Binding ElementName=thisUserControl, Path=BusyIndicatorStroke}" />

            <TextBlock
                x:Name="txtMsg"
                Margin="0,120,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="26"
                Foreground="Yellow"
                Opacity="1" />
        </Grid>
    </Grid>
</UserControl>
